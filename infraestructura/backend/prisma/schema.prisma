generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id                 String   @id @default(uuid())
  nombre            String
  correo            String   @unique
  estado            Boolean  @default(true)
  contrasena        String
  primeraVez        Boolean  @default(true)
  fechaCreacion     DateTime @default(now())
  fechaActualizacion DateTime @updatedAt
  
  // Relación con ejecuciones
  ejecuciones       EjecucionAlgoritmo[]
}

model EjecucionAlgoritmo {
  id                    String    @id @default(uuid())
  usuarioId             String
  nombreAlgoritmo       String
  tipoAlgoritmo         String    // 'predictivo', 'optimizacion', 'clasificacion'
  valoresEntrada        String    // JSON
  variableSeleccionada  String
  resultado             String    // JSON - SIEMPRE tiene valor (no nullable)
  fechaEjecucion        DateTime  @default(now())
  tiempoEjecucion       Float     // En segundos - SIEMPRE tiene valor (no nullable)
  
  // Relación con usuario
  usuario               Usuario   @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  
  // Índices para optimizar consultas
  @@index([usuarioId, fechaEjecucion(sort: Desc)])
  @@index([tipoAlgoritmo])
  @@map("ejecucion_algoritmo")
}